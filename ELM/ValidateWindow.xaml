<Window x:Class="ELM.ValidateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELM"
        mc:Ignorable="d"
        Title="Processed message" Height="600" Width="600">
    <Grid>
        <Label Content="Processed message" HorizontalAlignment="Left" Margin="222,47,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBlock x:Name="txtbox_message" Margin="63,113,0,0" TextWrapping="Wrap" Height="355" Width="467" FontSize="14" 
              ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" 
              TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="btn_close" Content="Close" HorizontalAlignment="Left" Margin="400,501,0,0" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.2,0.8" Height="34" Click="btn_close_Click"/>
    </Grid>
</Window>
